<Window x:Class="loginpagetest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:loginpagetest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Canvas Grid.Row="1">
            <TextBox x:Name="username" Background="WhiteSmoke" Width="200" Canvas.Left="300" Canvas.Top="10"></TextBox>
            <PasswordBox x:Name="password" Background="WhiteSmoke" Width="200" Canvas.Left="300" Canvas.Top="50"></PasswordBox>
            <Button Background="BlueViolet"  Width="64" Height="29"  Canvas.Left="295" Canvas.Top="90" Content="login" FontSize="15" Click="Login_Click"/>
            <Button Background="Brown"  Width="64" Height="29"  Canvas.Right="295" Canvas.Top="90" Content="registr" FontSize="15" Click="register_Click"/>
        </Canvas>
    </Grid>
</Window>
